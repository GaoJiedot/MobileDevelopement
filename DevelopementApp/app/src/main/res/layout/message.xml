<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgound_color">

    <FrameLayout
        android:id="@+id/message_fg"
        android:layout_width="match_parent"
        android:layout_height="649dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="663dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:background="@color/white"
                android:elevation="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="运动圈"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/msg_add_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.519"
                    app:srcCompat="@drawable/add2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/upload_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="157dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/nv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/message_home_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:alpha="@dimen/material_emphasis_medium"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:id="@+id/message_al_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:alpha="@dimen/material_emphasis_medium"
                app:srcCompat="@drawable/lesson_bottom" />

            <ImageView
                android:id="@+id/message_msg_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"

                android:alpha="@dimen/material_emphasis_medium"
                app:srcCompat="@drawable/message" />

            <ImageView
                android:id="@+id/message_my_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:alpha="@dimen/material_emphasis_medium"
                app:srcCompat="@drawable/my" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:alpha="@dimen/material_emphasis_medium"
                android:gravity="center"
                android:text="主页"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:alpha="@dimen/material_emphasis_medium"
                android:gravity="center"
                android:text="动作库"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:alpha="@dimen/material_emphasis_medium"
                android:gravity="center"
                android:text="消息"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:alpha="@dimen/material_emphasis_medium"
                android:gravity="center"
                android:text="我的"
                android:textSize="12sp" />
        </LinearLayout>

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>